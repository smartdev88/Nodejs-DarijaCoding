
<div class="row">
    <div class="col-md-12 mx-auto">
        <div class="card bg-danger  shadow-sm text-white rounded-0">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mx-auto">
                        <h3 class="text-capitalize text-white">Modifier un contact</h3>
                        <hr>
                        <form action="/contact/edit/{{contact.id}}" method="post">
                            <div class="form-group">
                                <label for="name">Nom & Prénom</label>
                                <input type="text" name="name" class="form-control" value="{{contact.name}}">
                            </div>
                            <div class="form-group">
                                <label for="tel">Téléphone</label>
                                <input type="text" name="tel" class="form-control" value="{{contact.tel}}">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn bg-success border-dark text-white">Valider</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>